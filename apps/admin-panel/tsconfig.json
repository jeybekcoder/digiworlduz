// ðŸ“„ Fayl: apps/admin-panel/tsconfig.json
// ðŸŽ¯ Maqsad: Admin panel uchun TypeScript konfiguratsiyasi â€” alias va path'larni moslashtirish
// ðŸ§± TurboRepo asosidagi struktura, @components, @app va @/ uchun aliaslar
{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@app/*": [
        "app/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "app/**/*",
    "components/**/*",
    "lib/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
